{
  "name": "@otomadb/web",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "fmt": "pnpm run lint:prettier --write",
    "lint:eslint": "eslint . --ext \".js,.jsx,.ts,.tsx\"",
    "lint:prettier": "prettier --check \"**/*.{js,ts,tsx,css,json,yml,md}\"",
    "lintfix": "run-s 'lintfix:*' 'fmt'",
    "lintfix:eslint": "pnpm run lint:eslint --fix",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "pnpm run codegen --watch",
    "schema:validate": "graphql-inspector validate \"./src/**/*.{ts,tsx}\" ./schema.graphql",
    "schema:diff": "graphql-inspector diff ./schema.graphql",
    "schema:introspect": "graphql-inspector introspect --write schema.graphql",
    "storybook": "sb dev -p 6006 --no-open",
    "storybook:build": "sb build",
    "storybook:preview": "serve storybook-static",
    "vercel:web": "run-s 'codegen' 'build'",
    "vercel:storybook": "run-s 'codegen' 'storybook:build'"
  },
  "engines": {
    "node": "^v18.16.0"
  },
  "packageManager": "pnpm@8.6.0",
  "dependencies": {
    "@auth0/auth0-react": "^2.1.1",
    "@emotion/css": "^11.11.2",
    "@heroicons/react": "^2.0.18",
    "@hookform/error-message": "^2.0.1",
    "@hookform/resolvers": "3.1.0",
    "@next/mdx": "^13.4.6",
    "@svgr/webpack": "^8.0.1",
    "@urql/exchange-auth": "^2.1.0",
    "@urql/exchange-graphcache": "^6.1.4",
    "client-only": "^0.0.1",
    "clsx": "^1.2.1",
    "copy-to-clipboard": "^3.3.3",
    "date-fns": "^2.30.0",
    "graphql": "^16.6.0",
    "graphql-request": "6.1.0",
    "next": "13.4.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "7.45.1",
    "react-use": "^17.4.0",
    "sass": "^1.63.6",
    "server-only": "^0.0.1",
    "urql": "^4.0.4",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@babel/core": "^7.22.8",
    "@graphql-codegen/cli": "^3.3.1",
    "@graphql-codegen/client-preset": "^3.0.1",
    "@graphql-codegen/urql-introspection": "^2.2.1",
    "@graphql-inspector/cli": "^3.4.19",
    "@graphql-typed-document-node/core": "~3.2.0",
    "@storybook/addon-actions": "7.0.26",
    "@storybook/addon-essentials": "7.0.26",
    "@storybook/addon-interactions": "7.0.26",
    "@storybook/addon-links": "7.0.26",
    "@storybook/cli": "7.0.26",
    "@storybook/nextjs": "7.0.26",
    "@storybook/react": "7.0.26",
    "@storybook/testing-library": "^0.2.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tsconfig/node18": "^2.0.1",
    "@types/mdx": "^2.0.5",
    "@types/node": "^18.16.18",
    "@types/react": "^18.0.38",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "autoprefixer": "10.4.14",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "encoding": "^0.1.13",
    "eslint": "8.43.0",
    "eslint-config-next": "13.4.6",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-storybook": "^0.6.12",
    "eslint-plugin-unused-imports": "2.0.0",
    "graphql-codegen-typescript-mock-data": "^3.0.0",
    "msw": "^1.2.2",
    "msw-storybook-addon": "^1.8.0",
    "npm-run-all": "^4.1.5",
    "postcss": "8.4.25",
    "postcss-loader": "^7.3.3",
    "prettier": "^3.0.0-alpha.6",
    "serve": "^14.2.0",
    "style-loader": "^3.3.3",
    "tailwindcss": "3.3.2",
    "typescript": "5.1.3"
  }
}
